<h1>All Lists</h1>

<%= link_to 'New List', new_list_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @lists.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.text %></td>
      <td><%= link_to 'Show', list %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list_path(list),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
   </tr>
  <% end %>
</table>
